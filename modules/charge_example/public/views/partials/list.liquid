<div class="mt-4">
  <h4>List of last five test payments:</h4>
  {% query_graph "modules/payments/get_payments", per_page: 5 %}
  <table>
      <tr>
        <th>ID</th>
        <th>State</th>
        <th>Payer</th>
        <th>Amount</th>
      </tr>
    {% for payment in g.payments.results  %}
      <tr>
        <td>{{ payment.id }}</td>
        <td>{% if payment.properties.paid_at != blank %}Paid{% elsif payment.properties.failed_at != blank %}Failed{% else %}Pending{% endif %}</td>
        <td>{{ payment.user.name }}</td>
        <td>{{ payment.properties.amount_cents | pricify_cents }}</td>
      </tr>
    {% endfor %}
  </table>
</div>
